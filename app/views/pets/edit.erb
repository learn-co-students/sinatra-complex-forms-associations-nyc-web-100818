<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" value="<%= @pet.name %>">

  <br></br>

  <label>Owner:</label>

  <br></br>

  <%@owners.each do |owner|%>
    <input type="radio" name="owner_id" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner_id == owner.id %> required> <%=owner.name%> </input>
  <%end%>

  <br></br>

  <input type="submit" value="Edit Pet">
</form>
